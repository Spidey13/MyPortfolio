# Production Environment Variables
# Copy this to your Render dashboard environment variables

# Google Gemini API Key (REQUIRED)
GOOGLE_API_KEY=your_actual_google_gemini_api_key_here

# Environment Settings
DEBUG=false
ENVIRONMENT=production

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS Configuration (Update with your actual Vercel domain)
CORS_ORIGINS=["https://yourname.vercel.app"]

# Security
ALLOWED_HOSTS=["your-backend-name.onrender.com", "yourname.vercel.app"]
